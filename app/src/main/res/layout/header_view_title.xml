<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/headerView_v3"
    android:gravity="center_vertical"
    android:minHeight="?attr/actionBarSize"
    android:orientation="vertical"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <com.growatt.shinetools.widget.AutoFitTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/tvRight"
            android:layout_toRightOf="@+id/ivLeft"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/headerView_title_v3"
            android:textSize="@dimen/size_title_sp_16" />

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@drawable/touch_bg_main_v3"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:src="@drawable/ov_back" />

        <com.growatt.shinetools.widget.AutoFitTextView
            android:id="@+id/tvRight"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/touch_bg_main_v3"
            android:gravity="center"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_6"
            android:textColor="@color/headerView"
            android:textSize="@dimen/size_title_sp_14" />
    </RelativeLayout>

</LinearLayout>
