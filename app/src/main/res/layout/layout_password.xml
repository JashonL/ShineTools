<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white1"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/edittext_bg_white_stroke"
        >
       <TextView
           android:id="@+id/tvTitle"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_40"
           android:gravity="center"
           android:text="@string/reminder"
           android:textColor="@color/title_bg_white"
           android:textSize="@dimen/size_title_sp_14"
           />
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center"
            android:text="@string/inverterset_operate"
            android:textColor="@color/content_bg_white"
            android:textSize="@dimen/size_content_sp_14"
            />
        <EditText
            android:id="@+id/etContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/edittext_bg_white_stroke"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/content_bg_white"
            android:textSize="@dimen/size_content_sp_14"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grid_bg_white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >
           <Button
               android:id="@+id/btnNo"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:background="@drawable/touch_bg"
               android:textColor="@color/mainColor"
               android:textSize="@dimen/size_content_sp_14"
               android:text="@string/all_no"
               android:layout_marginBottom="@dimen/dp_5"
               />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/grid_bg_white"
                />
            <Button
                android:id="@+id/btnOk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white1"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/size_content_sp_14"
                android:text="@string/all_ok"
                android:layout_marginBottom="@dimen/dp_5"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>