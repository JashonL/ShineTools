<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/iphone_background">
    <include layout="@layout/header_view_title_v3"/>

    <LinearLayout
        android:id="@+id/ll_all_day"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:background="@drawable/touch_bg"
        android:padding="@dimen/dp_10"
        android:layout_height="@dimen/dp_45">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_allday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="@string/android_key2802"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_14"
            app:autoSizeMaxTextSize="@dimen/size_content_sp_14"
            app:autoSizeMinTextSize="@dimen/sp_8"
            app:autoSizeTextType="uniform" />

        <Switch
            android:id="@+id/sw_switch_allday"
            android:checked="true"
            android:layout_width="wrap_content"
            android:theme="@style/MyRadioButton"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:background="@drawable/touch_bg"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="@dimen/dp_45">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_custom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="@string/m373自定义"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_14"
            app:autoSizeMaxTextSize="@dimen/size_content_sp_14"
            app:autoSizeMinTextSize="@dimen/sp_8"
            app:autoSizeTextType="uniform" />

        <Switch
            android:id="@+id/sw_switch_custom"
            android:checked="false"
            android:layout_width="wrap_content"
            android:theme="@style/MyRadioButton"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:background="@color/white1"
        >
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/record_start"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/m204开始时间"
            android:gravity="center_vertical"
            android:textSize="@dimen/size_content_sp_12"
            android:textColor="@color/title_bg_white"

            />
    </LinearLayout>
    <include layout="@layout/item_timerset_action1" android:id="@+id/timeAction1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:background="@color/white1"
        android:layout_marginTop="@dimen/dp_10"
        >
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/record_finish"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/m结束时间"
            android:gravity="center_vertical"
            android:textSize="@dimen/size_content_sp_12"
            android:textColor="@color/title_bg_white"

            />
    </LinearLayout>
    <include layout="@layout/item_timerset_action2" android:id="@+id/timeAction1"/>
</LinearLayout>
