<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/header_view_title" android:id="@+id/headerView"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvTitle1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_margin="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_content_sp_14"
                android:textColor="@color/max_main_text_title"
                />
            <LinearLayout
                android:id="@+id/llSelectType"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="@dimen/dp_30">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btnSelectType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/PutinActivity_search"
                    android:gravity="center"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="@dimen/sp_6"
                    app:autoSizeMaxTextSize="@dimen/size_content_note"
                    android:textColor="@color/max_main_text_content"
                    android:background="@drawable/bg_gray_stroke"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btnSelectMech"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/PutinActivity_search"
                    android:gravity="center"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="@dimen/sp_6"
                    app:autoSizeMaxTextSize="@dimen/size_content_note"
                    android:textSize="@dimen/size_content_note"
                    android:textColor="@color/max_main_text_content"
                    android:background="@drawable/bg_gray_stroke"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btnSelectModel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/PutinActivity_search"
                    android:gravity="center"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="@dimen/sp_6"
                    app:autoSizeMaxTextSize="@dimen/size_content_note"
                    android:textSize="@dimen/size_content_note"
                    android:textColor="@color/max_main_text_content"
                    android:background="@drawable/bg_gray_stroke"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btnSelect"
                android:layout_width="@dimen/dp_220"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center_horizontal"
                android:text="@string/PutinActivity_search"
                android:gravity="center"
                android:textSize="@dimen/size_content_sp_14"
                android:textColor="@color/max_main_text_content"
                android:background="@drawable/bg_gray_stroke"
                />
            <TextView
                android:id="@+id/tvContent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:textSize="@dimen/size_content_sp_14"
                android:textColor="@color/max_main_text_content"
                />


            <Button
                android:id="@+id/btnSetting"
                android:layout_width="@dimen/dp_230"
                android:layout_height="@dimen/dp_42"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_selector"
                android:text="@string/action_settings"
                android:textColor="#ffffff"
                android:textSize="@dimen/size_content_sp_16" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
