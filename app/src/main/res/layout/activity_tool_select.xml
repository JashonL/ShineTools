<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical">
    <include layout="@layout/header_view_title_v3" android:id="@+id/headerView"/>
    <TextView
        android:id="@+id/tvTitleNote"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerView"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_83"
        android:textColor="#253368"
        android:textStyle="bold"
        android:textSize="@dimen/size_title_sp_16"
        android:text="@string/m240本地调试工具"
        android:gravity="center"
        android:padding="@dimen/dp_20"
        />
    <ImageView
        android:layout_width="@dimen/dp_160"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/tvTitleNote"
        app:layout_constraintTop_toTopOf="@+id/tvTitleNote"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitleNote"
        android:src="@drawable/tool_imagebg"
        />
    <View
        android:id="@+id/vScan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleNote"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_68"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/shape_white_corner_bg_5"
        />
    <TextView
        android:id="@+id/tvNote1"
        app:layout_constraintLeft_toLeftOf="@+id/vScan"
        app:layout_constraintTop_toTopOf="@+id/vScan"
        app:layout_constraintBottom_toBottomOf="@+id/vScan"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:background="@drawable/shape"
        android:text="1"
        android:gravity="center"
        android:textColor="@color/white1"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/ivNext"
        app:layout_constraintTop_toTopOf="@+id/vScan"
        app:layout_constraintBottom_toBottomOf="@+id/vScan"
        app:layout_constraintRight_toRightOf="@+id/vScan"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_15"
        android:src="@drawable/max_right"
        android:layout_marginRight="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/tvUsb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/vScan"
        app:layout_constraintBottom_toBottomOf="@+id/vScan"
        app:layout_constraintLeft_toRightOf="@+id/tvNote1"
        app:layout_constraintRight_toLeftOf="@+id/ivNext"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="USB/232-WIFI"
        android:gravity="center_vertical"
        android:textColor="@color/title_bg_white"
        android:textSize="@dimen/size_title_sp_14"
        />
    <View
        android:id="@+id/vDevice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vScan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_white_corner_bg_5"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView"
        />
    <TextView
        android:id="@+id/tvNote2"
        app:layout_constraintLeft_toLeftOf="@+id/vDevice"
        app:layout_constraintTop_toTopOf="@+id/vDevice"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:background="@drawable/shape"
        android:layout_marginTop="@dimen/dp_20"
        android:text="2"
        android:gravity="center"
        android:textColor="@color/white1"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvNote3"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_35"
        app:layout_constraintTop_toTopOf="@+id/tvNote2"
        app:layout_constraintBottom_toBottomOf="@+id/tvNote2"
        app:layout_constraintLeft_toRightOf="@+id/tvNote2"
        app:layout_constraintRight_toLeftOf="@+id/ivNext"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:text="@string/m请选择产品类型"
        android:gravity="center_vertical"
        android:textColor="@color/title_bg_white"
        android:textSize="@dimen/size_content_sp_14"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/vDevice"
        app:layout_constraintRight_toRightOf="@+id/vDevice"
        app:layout_constraintTop_toBottomOf="@+id/tvNote2"
        android:layout_marginTop="@dimen/dp_20"
        android:maxHeight="@dimen/dp_325"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
