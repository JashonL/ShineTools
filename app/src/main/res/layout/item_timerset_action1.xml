<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_185"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_time"
        android:background="@color/white1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_np"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal">

                <com.growatt.shinetools.widget.NumberPicker
                    android:id="@+id/np_choose1"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:theme="@style/SampleTheme" />

                <TextView
                    android:id="@+id/tv_unit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=" "
                    android:textColor="@color/inver_key"
                    android:textSize="@dimen/dp_12" />

                <com.growatt.shinetools.widget.NumberPicker
                    android:id="@+id/np_choose2"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:theme="@style/SampleTheme" />

                <TextView
                    android:id="@+id/tv_unit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text=""
                    android:textColor="@color/inver_key"
                    android:textSize="@dimen/dp_10" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_centerInParent="true">

                <View
                    android:layout_width="@dimen/dp_231"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:layout_centerHorizontal="true"
                    android:background="#c7cbce" />

                <View
                    android:layout_width="@dimen/dp_231"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="#c7cbce" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>