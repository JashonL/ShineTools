<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_eeeeeee">
    <include layout="@layout/toobar_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvTitle1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                android:text="@string/android_key2396"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:textColor="@color/color_text_66"
                android:textSize="@dimen/size_title_sp_14"
                />
            <Button
                android:id="@+id/btnSelect1"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_30"
                app:layout_constraintTop_toTopOf="@+id/tvTitle1"
                app:layout_constraintBottom_toBottomOf="@+id/tvTitle1"
                app:layout_constraintRight_toRightOf="@+id/barrier"
                android:layout_marginRight="@dimen/dp_15"
                android:text="@string/android_key2005"
                android:gravity="center"
                android:textSize="@dimen/size_content_sp_12"
                android:textColor="@color/color_text_66"
                android:background="@drawable/bg_gray_stroke"
                />
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tvRead1,tvRead2,tvRead3"
                app:barrierDirection="start"

                />
            <TextView
                android:id="@+id/tvRead1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                app:layout_constraintTop_toTopOf="@+id/tvTitle1"
                app:layout_constraintBottom_toBottomOf="@+id/tvTitle1"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/android_key2154"
                android:background="@drawable/oss_selector_bg_device"
                android:textColor="@color/oss_selector_textcolor_device"
                android:gravity="center"
                android:textSize="@dimen/size_content_sp_12"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tvRead2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                app:layout_constraintTop_toTopOf="@+id/tvTitle2"
                app:layout_constraintBottom_toBottomOf="@+id/tvTitle2"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/android_key2154"
                android:background="@drawable/oss_selector_bg_device"
                android:textColor="@color/oss_selector_textcolor_device"
                android:gravity="center"
                android:textSize="@dimen/size_content_sp_12"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tvRead3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                app:layout_constraintTop_toTopOf="@+id/tvTitle3"
                app:layout_constraintBottom_toBottomOf="@+id/tvTitle3"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/android_key2154"
                android:background="@drawable/oss_selector_bg_device"
                android:textColor="@color/oss_selector_textcolor_device"
                android:gravity="center"
                android:textSize="@dimen/size_content_sp_14"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tvTitle2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle1"
                android:gravity="center_vertical"
                android:text="@string/android_key2397"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="@color/color_text_66"
                android:textSize="@dimen/size_title_sp_14"
                />
            <Button
                android:id="@+id/btnSelect2"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_30"
                app:layout_constraintTop_toTopOf="@+id/tvTitle2"
                app:layout_constraintBottom_toBottomOf="@+id/tvTitle2"
                app:layout_constraintRight_toRightOf="@+id/barrier"
                android:layout_marginRight="@dimen/dp_15"
                android:text="@string/android_key2005"
                android:gravity="center"
                android:textSize="@dimen/size_content_sp_12"
                android:textColor="@color/color_text_66"
                android:background="@drawable/bg_gray_stroke"
                />
            <TextView
                android:id="@+id/tvTitle3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle2"
                android:gravity="center_vertical"
                android:text="@string/android_key2398"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="@color/color_text_66"
                android:textSize="@dimen/size_title_sp_14"
                />
            <Button
                android:id="@+id/btnSelect3"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_30"
                app:layout_constraintTop_toTopOf="@+id/tvTitle3"
                app:layout_constraintBottom_toBottomOf="@+id/tvTitle3"
                app:layout_constraintRight_toRightOf="@+id/barrier"
                android:layout_marginRight="@dimen/dp_15"
                android:text="@string/android_key2005"
                android:gravity="center"
                android:textSize="@dimen/size_content_sp_12"
                android:textColor="@color/color_text_66"
                android:background="@drawable/bg_gray_stroke"
                />
            <TextView
                android:id="@+id/tvAFCITitle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle3"
                android:gravity="center_vertical"
                android:text="@string/android_key2399"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="@color/color_text_66"
                android:textStyle="bold"
                android:textSize="@dimen/size_content_sp_14"
                />
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAFCITitle"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/rBtn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_weight="4"
                    android:background="@drawable/oss_selector_bg_device"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:text="A路强度"
                    android:textColor="@color/oss_selector_textcolor_device"
                    android:textSize="@dimen/size_content_sp_12" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <RadioButton
                    android:id="@+id/rBtn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_weight="4"
                    android:background="@drawable/oss_selector_bg_device"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:text="B路强度"
                    android:textColor="@color/oss_selector_textcolor_device"
                    android:textSize="@dimen/size_content_sp_12" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <RadioButton
                    android:id="@+id/rBtn3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_weight="4"
                    android:background="@drawable/oss_selector_bg_device"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:text="A路FFT"
                    android:textColor="@color/oss_selector_textcolor_device"
                    android:textSize="@dimen/size_content_sp_12" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <RadioButton
                    android:id="@+id/rBtn4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_weight="4"
                    android:background="@drawable/oss_selector_bg_device"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:text="B路FFT"
                    android:textColor="@color/oss_selector_textcolor_device"
                    android:textSize="@dimen/size_content_sp_12" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </RadioGroup>
            <TextView
                android:id="@+id/tvReadChart"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_30"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/android_key816"
                android:background="@drawable/oss_selector_bg_device"
                android:textColor="@color/oss_selector_textcolor_device"
                android:gravity="center"
                android:textSize="@dimen/size_title_sp_14"
                />
            <TextView
                android:id="@+id/tvUnit1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/color_text_66"
                android:text="dBm"
                android:textSize="@dimen/size_title_sp_12"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvReadChart"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tvUnitTitle1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/color_text_66"
                android:text="@string/android_key2402"
                android:textSize="@dimen/size_title_sp_14"
                android:gravity="center_vertical"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvUnit1"
                app:layout_constraintBottom_toBottomOf="@+id/tvUnit1"
                />
            <TextView
            android:id="@+id/tvUnit1Note1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/android_key2400"
            android:textColor="@color/color_text_66"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvUnit1"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_vertical"
                android:textSize="@dimen/size_content_note"
            />
            <View
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_4"
                android:background="@color/max_iv_graph_linechart1"
                app:layout_constraintTop_toTopOf="@+id/tvUnit1Note1"
                app:layout_constraintBottom_toBottomOf="@+id/tvUnit1Note1"
                app:layout_constraintRight_toLeftOf="@+id/tvUnit1Note1"
                />
            <TextView
                android:id="@+id/tvUnit1Note2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintRight_toRightOf="@+id/tvUnit1Note1"
                app:layout_constraintTop_toBottomOf="@+id/tvUnit1Note1"
                app:layout_constraintBottom_toBottomOf="@+id/tvUnit1"
                android:text="@string/android_key2401"
                android:textColor="@color/color_text_66"
                android:textSize="@dimen/size_content_note"
                android:gravity="center_vertical"
                />
            <View
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_4"
                android:background="@color/max_iv_graph_linechart2"
                app:layout_constraintTop_toTopOf="@+id/tvUnit1Note2"
                app:layout_constraintBottom_toBottomOf="@+id/tvUnit1Note2"
                app:layout_constraintRight_toLeftOf="@+id/tvUnit1Note2"
                />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart1"
                app:layout_constraintTop_toBottomOf="@+id/tvUnit1"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="@dimen/dp_180" />
            <TextView
                android:id="@+id/tvUnit2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/color_text_66"
                android:text="FFT"
                android:textSize="@dimen/size_content_sp_12"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lineChart1"
                android:layout_marginTop="@dimen/dp_20"
                />
            <TextView
                android:id="@+id/tvUnitTitle2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/color_text_66"
                android:text="FFT实时值"
                android:textSize="@dimen/size_title_sp_14"
                android:gravity="center_vertical"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvUnit2"
                app:layout_constraintBottom_toBottomOf="@+id/tvUnit2"
                />
            <TextView
                android:id="@+id/tvUnit2Note1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/android_key2400"
                android:textColor="@color/color_text_66"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvUnit2"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_content_note"
                />
            <View
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_4"
                android:background="@color/max_iv_graph_linechart3"
                app:layout_constraintTop_toTopOf="@+id/tvUnit2Note1"
                app:layout_constraintBottom_toBottomOf="@+id/tvUnit2Note1"
                app:layout_constraintRight_toLeftOf="@+id/tvUnit2Note1"
                />
            <TextView
                android:id="@+id/tvUnit2Note2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintRight_toRightOf="@+id/tvUnit2Note1"
                app:layout_constraintTop_toBottomOf="@+id/tvUnit2Note1"
                app:layout_constraintBottom_toBottomOf="@+id/tvUnit2"
                android:text="@string/android_key2401"
                android:textColor="@color/color_text_66"
                android:textSize="@dimen/size_content_note"
                android:gravity="center_vertical"
                />
            <View
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_4"
                android:background="@color/max_iv_graph_linechart4"
                app:layout_constraintTop_toTopOf="@+id/tvUnit2Note2"
                app:layout_constraintBottom_toBottomOf="@+id/tvUnit2Note2"
                app:layout_constraintRight_toLeftOf="@+id/tvUnit2Note2"
                />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart2"
                app:layout_constraintTop_toBottomOf="@+id/tvUnit2"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="@dimen/dp_180" />
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lineChart2"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
