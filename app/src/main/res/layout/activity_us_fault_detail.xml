<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toobar_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                app:cardBackgroundColor="@color/white1"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_fault"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginStart="@dimen/dp_10"
                        android:src="@drawable/icon_fault"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_fault"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_fault" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_fault"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginStart="@dimen/dp_10"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/android_key316"
                        android:textColor="@color/color_text_33"
                        android:textSize="@dimen/size_content_sp_14"
                        app:autoSizeMaxTextSize="@dimen/size_content_sp_14"
                        app:autoSizeMinTextSize="@dimen/size_content_note"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintLeft_toRightOf="@+id/iv_fault"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_fault_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:maxWidth="@dimen/dp_60"
                        android:maxLines="2"
                        android:text="--"
                        android:textColor="@color/color_fault"
                        android:textSize="@dimen/size_content_sp_14"
                        app:autoSizeMaxTextSize="@dimen/size_content_sp_14"
                        app:autoSizeMinTextSize="@dimen/size_content_note"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_fault"
                        app:layout_constraintLeft_toRightOf="@+id/tv_fault"
                        app:layout_constraintTop_toTopOf="@+id/tv_fault" />

                    <View
                        android:id="@+id/v_fault"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray_eeeeeee"
                        app:layout_constraintTop_toBottomOf="@+id/tv_fault" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_fault_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:minHeight="@dimen/dp_100"
                        android:textColor="@color/color_text_33"
                        android:textSize="@dimen/size_content_sp_14"
                        app:autoSizeMaxTextSize="@dimen/size_content_sp_14"
                        app:autoSizeMinTextSize="@dimen/size_content_note"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintLeft_toLeftOf="@+id/iv_fault"
                        app:layout_constraintTop_toBottomOf="@+id/v_fault" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:id="@+id/cvWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                app:cardBackgroundColor="@color/white1"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_warn"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginStart="@dimen/dp_10"
                        android:src="@drawable/icon_warn"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_warning"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_warning" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_warning"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginStart="@dimen/dp_10"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/android_key424"
                        android:textColor="@color/color_text_33"
                        android:textSize="@dimen/size_content_sp_14"
                        app:autoSizeMaxTextSize="@dimen/size_content_sp_14"
                        app:autoSizeMinTextSize="@dimen/size_content_note"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintLeft_toRightOf="@+id/iv_warn"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_warning_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:maxWidth="@dimen/dp_60"
                        android:maxLines="2"
                        android:text="--"
                        android:textColor="@color/color_fault"
                        android:textSize="@dimen/size_content_sp_14"
                        app:autoSizeMaxTextSize="@dimen/size_content_sp_14"
                        app:autoSizeMinTextSize="@dimen/size_content_note"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_warning"
                        app:layout_constraintLeft_toRightOf="@+id/tv_warning"
                        app:layout_constraintTop_toTopOf="@+id/tv_warning" />

                    <View
                        android:id="@+id/v_warning"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray_eeeeeee"
                        app:layout_constraintTop_toBottomOf="@+id/tv_warning" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_warning_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:minHeight="@dimen/dp_100"
                        android:textColor="@color/color_text_33"
                        android:textSize="@dimen/size_content_sp_14"
                        app:autoSizeMaxTextSize="@dimen/size_content_sp_14"
                        app:autoSizeMinTextSize="@dimen/size_content_note"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintLeft_toLeftOf="@+id/iv_warn"
                        app:layout_constraintTop_toBottomOf="@+id/v_warning" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>


</LinearLayout>