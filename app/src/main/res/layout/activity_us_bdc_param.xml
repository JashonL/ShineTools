<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toobar_title" />

    <LinearLayout
        android:id="@+id/ll_bdc_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_gray_radius_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bdc_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:text="BDC1"
            android:textColor="@color/color_text_66"
            android:textSize="@dimen/size_content_sp_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_5"
            android:src="@drawable/icon_pull" />


    </LinearLayout>


  <!--  <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_5"
        android:text="@string/system_message"
        android:textColor="@color/color_text_66"
        android:textSize="@dimen/size_content_sp_14" />-->




    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_system_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/system_message"
                android:textColor="@color/color_text_66"
                android:textSize="@dimen/size_content_sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_eeeeeee" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rlv_system"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/shape_gray_radius_20"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:nestedScrollingEnabled="false" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/iphone_background" />


            <TextView
                android:id="@+id/tv_status_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/status_information"
                android:textColor="@color/color_text_66"
                android:textSize="@dimen/size_content_sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_eeeeeee" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rlv_status_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:background="@drawable/shape_gray_radius_20"
                android:nestedScrollingEnabled="false" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/iphone_background" />


            <TextView
                android:id="@+id/tv_inner_info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text="@string/inside_information"
                android:textColor="@color/color_text_66"
                android:textSize="@dimen/size_content_sp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_eeeeeee" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rlv_inner_system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:background="@drawable/shape_gray_radius_20"
                android:nestedScrollingEnabled="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/iphone_background" />

            <TextView
                android:id="@+id/tv_battery_info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text="@string/android_key483"
                android:textColor="@color/color_text_66"
                android:textSize="@dimen/size_content_sp_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_eeeeeee" />



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rlv_battery_system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:background="@drawable/shape_gray_radius_20"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>