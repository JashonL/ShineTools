<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/header_view" android:id="@+id/headerView"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/item_select_gray333_blue"
                android:background="@drawable/select_corner_center_graywhite"                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/m353时"
                android:textSize="@dimen/dp_14" />

            <RadioButton
                android:id="@+id/radio_button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:textColor="@color/item_select_gray333_blue"
                android:background="@drawable/select_corner_center_graywhite"                android:button="@null"
                android:gravity="center"
                android:text="@string/all_time_day"
                android:textSize="@dimen/dp_14" />

            <RadioButton
                android:id="@+id/radio_button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:textColor="@color/item_select_gray333_blue"
                android:background="@drawable/select_corner_center_graywhite"                android:button="@null"
                android:gravity="center"
                android:text="@string/all_time_month"
                android:textSize="@dimen/dp_14" />

            <RadioButton
                android:id="@+id/radio_button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:textColor="@color/item_select_gray333_blue"
                android:background="@drawable/select_corner_center_graywhite"                android:button="@null"
                android:gravity="center"
                android:text="@string/all_time_year"
                android:textSize="@dimen/dp_14" />
        </RadioGroup>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/iphone_background"
        >
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/m354最近24小时发电量"
            android:textColor="@color/title_bg_white"
            android:textSize="@dimen/dp_15"
            />
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/all_power_quantity"
        android:gravity="center_vertical"
        android:textSize="@dimen/dp_13"
        android:textColor="@color/content_bg_white"
        />
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_2"
        />
    <TextView
        android:id="@+id/tvXUnit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical|right"
        android:textSize="@dimen/dp_13"
        android:textColor="@color/content_bg_white"
        />
</LinearLayout>
