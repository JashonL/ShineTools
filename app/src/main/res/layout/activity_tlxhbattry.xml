<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/header_view_v3" android:id="@+id/headerView"/>
    <!--状态区域-->
    <View
        android:id="@+id/vStatus"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:layout_marginTop="@dimen/dp_15"
        />
    <com.growatt.shinetools.widget.WaveView
        android:id="@+id/waveview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/vStatus"
        app:layout_constraintRight_toRightOf="@+id/vStatus"
        app:layout_constraintTop_toTopOf="@+id/vStatus"
        app:layout_constraintBottom_toBottomOf="@+id/vStatus"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStatus"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_27"
        app:layout_constraintLeft_toLeftOf="@+id/vStatus"
        app:layout_constraintRight_toRightOf="@+id/vStatus"
        app:layout_constraintTop_toTopOf="@+id/vStatus"
        app:layout_constraintBottom_toBottomOf="@+id/vStatus"
        android:gravity="center"
        android:textSize="@dimen/size_content_sp_14"
        android:textColor="@color/white1"
        android:text="--"
        />
    <TextView
        android:id="@+id/tvStatusNote"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        app:layout_constraintTop_toBottomOf="@+id/vStatus"
        android:text="@string/m505状态"
        android:textColor="@color/content_bg_white"
        android:gravity="center"
        android:textSize="@dimen/size_content_sp_14"
        />
    <!--告警区域-->
    <View
        android:id="@+id/vErr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        app:layout_constraintTop_toBottomOf="@+id/tvStatusNote"
        android:background="@drawable/touch_bg"
        />
    <ImageView
        android:id="@+id/ivErr"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        app:layout_constraintTop_toTopOf="@+id/vErr"
        app:layout_constraintBottom_toBottomOf="@+id/vErr"
        app:layout_constraintLeft_toLeftOf="@+id/vErr"
        android:layout_marginLeft="@dimen/dp_13"
        android:src="@drawable/max_worning"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvErrWarnNote"
        android:layout_width="@dimen/dp_110"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/vErr"
        app:layout_constraintBottom_toBottomOf="@+id/vErr"
        app:layout_constraintLeft_toRightOf="@+id/ivErr"
        android:layout_marginLeft="@dimen/dp_6"
        android:text="@string/all_Fault"
        android:gravity="center_vertical"
        android:textColor="@color/title_bg_white"
        android:textSize="@dimen/size_title_sp_14"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvErrNote"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintLeft_toRightOf="@+id/tvErrWarnNote"
        app:layout_constraintBottom_toBottomOf="@+id/vErr"
        app:layout_constraintTop_toBottomOf="@+id/tvErrCode"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/all_Fault"
        android:gravity="center_vertical"
        android:textColor="@color/note_bg_white"
        android:textSize="@dimen/size_title_sp_16"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvErrCode"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="@+id/vErr"
        app:layout_constraintLeft_toLeftOf="@+id/tvErrNote"
        app:layout_constraintRight_toRightOf="@+id/tvErrNote"
        app:layout_constraintBottom_toTopOf="@+id/tvErrNote"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:textColor="@color/max_main_err"
        android:textSize="@dimen/size_title_sp_14"
        android:text="--"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWarnNote"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintLeft_toRightOf="@+id/tvErrNote"
        app:layout_constraintBottom_toBottomOf="@+id/vErr"
        app:layout_constraintTop_toBottomOf="@+id/tvWarnCode"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/m190警告"
        android:gravity="center_vertical"
        android:textColor="@color/note_bg_white"
        android:textSize="@dimen/size_title_sp_16"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWarnCode"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="@+id/vErr"
        app:layout_constraintLeft_toLeftOf="@+id/tvWarnNote"
        app:layout_constraintRight_toRightOf="@+id/tvWarnNote"
        app:layout_constraintBottom_toTopOf="@+id/tvWarnNote"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:textColor="@color/max_main_err"
        android:textSize="@dimen/size_title_sp_16"
        android:text="--"
        />
    <ImageView
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="@+id/vErr"
        app:layout_constraintBottom_toBottomOf="@+id/vErr"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_13"
        android:src="@drawable/max_right"
        />
    <!--电压电流等数据-->
    <TextView
        android:id="@+id/tvBusTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="@string/all_power_v"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/vErr"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/title_bg_white"
        android:paddingLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white1"
        />
    <TextView
        android:id="@+id/tvBus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical|right"
        app:layout_constraintTop_toTopOf="@+id/tvBusTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvBusTitle"
        app:layout_constraintLeft_toRightOf="@+id/tvBusTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#52608c"
        android:paddingRight="@dimen/dp_10"
        android:background="@color/white1"
        android:text="--"
        />
    <TextView
        android:id="@+id/tvCurrentTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="@string/all_power_a"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBusTitle"
        android:textColor="@color/title_bg_white"
        android:paddingLeft="@dimen/dp_10"
        android:layout_marginTop="1px"
        android:background="@color/white1"
        />
    <TextView
        android:id="@+id/tvCurrent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical|right"
        app:layout_constraintTop_toTopOf="@+id/tvCurrentTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvCurrentTitle"
        app:layout_constraintLeft_toRightOf="@+id/tvCurrentTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#52608c"
        android:paddingRight="@dimen/dp_10"
        android:background="@color/white1"
        android:text="--"
        />
    <TextView
        android:id="@+id/tvSOCTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="SOC"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrentTitle"
        android:textColor="@color/title_bg_white"
        android:paddingLeft="@dimen/dp_10"
        android:layout_marginTop="1px"
        android:background="@color/white1"
        />
    <TextView
        android:id="@+id/tvSOC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical|right"
        app:layout_constraintTop_toTopOf="@+id/tvSOCTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvSOCTitle"
        app:layout_constraintLeft_toRightOf="@+id/tvSOCTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#52608c"
        android:paddingRight="@dimen/dp_10"
        android:background="@color/white1"
        android:text="--"
        />
    <TextView
        android:id="@+id/tvTempTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="@string/m280当前温度"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvSOCTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/title_bg_white"
        android:paddingLeft="@dimen/dp_10"
        android:layout_marginTop="1px"
        android:background="@color/white1"
        />
    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical|right"
        app:layout_constraintTop_toTopOf="@+id/tvTempTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvTempTitle"
        app:layout_constraintLeft_toRightOf="@+id/tvTempTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#52608c"
        android:paddingRight="@dimen/dp_10"
        android:background="@color/white1"
        android:text="--"
        />
    <TextView
        android:id="@+id/tvCVTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:text="@string/mCV电压"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvTempTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/title_bg_white"
        android:paddingLeft="@dimen/dp_10"
        android:layout_marginTop="1px"
        android:background="@color/white1"
        />
    <TextView
        android:id="@+id/tvCV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical|right"
        app:layout_constraintTop_toTopOf="@+id/tvCVTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvCVTitle"
        app:layout_constraintLeft_toRightOf="@+id/tvCVTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#52608c"
        android:paddingRight="@dimen/dp_10"
        android:background="@color/white1"
        android:text="--"
        />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/headerView"
        android:visibility="visible"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/btnBDC1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/oss_selector_bg_device"
            android:textColor="@color/oss_selector_textcolor_device"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:text="BMS1--SOC"
            android:textSize="@dimen/size_content_note"
            />
