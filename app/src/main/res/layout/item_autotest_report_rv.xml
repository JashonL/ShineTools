<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:background="@color/white1"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:text="@string/m测试进程"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/title_bg_white"
            android:textSize="@dimen/size_content_sp_12" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContent1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white1"
            android:gravity="center_vertical|right"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textColor="#52608c"
            android:textSize="@dimen/size_content_sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitle1"
            app:layout_constraintLeft_toRightOf="@+id/tvTitle1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitle1" />

        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/white1"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:text="@string/限制数值"
            android:textColor="@color/title_bg_white"
            android:textSize="@dimen/size_content_sp_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContent2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white1"
            android:gravity="center_vertical|right"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textColor="#52608c"
            android:textSize="@dimen/size_content_sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitle2"
            app:layout_constraintLeft_toRightOf="@+id/tvTitle2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitle2" />

        <TextView
            android:id="@+id/tvTitle3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/white1"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:text="@string/触发数值"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/title_bg_white"
            android:textSize="@dimen/size_content_sp_12"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContent3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white1"
            android:gravity="center_vertical|right"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textColor="#52608c"
            android:textSize="@dimen/size_content_sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitle3"
            app:layout_constraintLeft_toRightOf="@+id/tvTitle3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitle3" />

        <TextView
            android:id="@+id/tvTitle4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/white1"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:text="@string/单歩结果"
            android:textColor="@color/title_bg_white"
            android:textSize="@dimen/size_content_sp_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContent4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white1"
            android:gravity="center_vertical|right"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textColor="#52608c"
            android:textSize="@dimen/size_content_sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitle4"
            app:layout_constraintLeft_toRightOf="@+id/tvTitle4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitle4" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_5"
            android:background="@color/iphone_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>