<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxWidth="@dimen/dp_300"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="@string/m自动测试"
        android:gravity="center_vertical"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/size_content_sp_14"
        app:autoSizeMinTextSize="@dimen/size_content_sp_8"
        android:textSize="@dimen/size_content_sp_14"
        android:textColor="@color/content_bg_white"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:maxWidth="@dimen/dp_150"
        app:layout_constraintLeft_toRightOf="@+id/tvTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center_vertical|right"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/size_content_sp_14"
        app:autoSizeMinTextSize="@dimen/size_content_sp_8"
        android:textSize="@dimen/size_content_sp_14"
        android:textColor="@color/title_bg_white"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/iphone_background"
        />
</androidx.constraintlayout.widget.ConstraintLayout>