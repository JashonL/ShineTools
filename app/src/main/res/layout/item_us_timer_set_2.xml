<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_105"
    android:background="@color/white1"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/grid_bg_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSelect1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:minWidth="@dimen/dp_140"
        android:maxWidth="@dimen/dp_150"
        android:background="@drawable/edittext_bg_white_stroke"
        android:text="@string/m225请选择"
        android:gravity="center"
        android:textSize="@dimen/size_content_sp_14"
        android:textColor="@color/content_bg_white"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSelect2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSelect1"
        app:layout_constraintBottom_toBottomOf="@+id/tvSelect1"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:minWidth="@dimen/dp_140"
        android:maxWidth="@dimen/dp_150"
        android:background="@drawable/edittext_bg_white_stroke"
        android:text="@string/m225请选择"
        android:gravity="center"
        android:textSize="@dimen/size_content_sp_14"
        android:textColor="@color/content_bg_white"
        />
    <TextView
        android:id="@+id/tvNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSelect1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_5"
        />
    <EditText
        android:id="@+id/tvStart"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintRight_toRightOf="@+id/tvSelect1"
        app:layout_constraintTop_toTopOf="@+id/tvNote"
        app:layout_constraintBottom_toBottomOf="@+id/tvNote"
        android:background="@drawable/edittext_bg_white_stroke"
        android:hint="@string/m460开始"
        android:textColorHint="@color/hint_bg_white"
        android:gravity="center"
        android:inputType="number"
        android:textSize="@dimen/size_content_sp_14"
        android:textColor="@color/content_bg_white"
        />
    <EditText
        android:id="@+id/tvEnd"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="@+id/tvSelect2"
        app:layout_constraintTop_toTopOf="@+id/tvNote"
        app:layout_constraintBottom_toBottomOf="@+id/tvNote"
        android:background="@drawable/edittext_bg_white_stroke"
        android:hint="@string/结束"
        android:textColorHint="@color/hint_bg_white"
        android:gravity="center"
        android:inputType="number"
        android:textSize="@dimen/size_content_sp_14"
        android:textColor="@color/content_bg_white"
        />
    <CheckBox
        android:id="@+id/cbTime"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNote"
        app:layout_constraintBottom_toBottomOf="@+id/tvNote"
        android:layout_marginRight="@dimen/dp_10"
        android:theme="@style/MyCheckBox"
        />
    <TextView
        android:id="@+id/tvCheck"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/cbTime"
        app:layout_constraintRight_toRightOf="@+id/cbTime"
        app:layout_constraintTop_toTopOf="@+id/cbTime"
        app:layout_constraintBottom_toBottomOf="@+id/cbTime"
        />
</androidx.constraintlayout.widget.ConstraintLayout>