<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background">
    <include layout="@layout/header_view_title_v3" android:id="@+id/headerView"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            >
            <!--故障码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:background="@color/max_main_power"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/m324故障码"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/max_main_text_title"
                    android:textSize="@dimen/size_content_sp_14"
                    />
                <TextView
                    android:id="@+id/tvErrCode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/max_main_text_title"
                    android:textSize="@dimen/dp_15"
                    />
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/max_main_text_title"
                    android:textSize="@dimen/dp_15"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvErrCodeContent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@color/white1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/max_main_text_content"
                android:textSize="@dimen/dp_14"
                />
            <!--具体故障-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <View
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:background="@color/max_main_power"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="具体故障:"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/max_main_text_title"
                    android:textSize="@dimen/dp_15"
                    />
                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/max_main_text_title"
                    android:textSize="@dimen/dp_15"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvErrorContent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@color/white1"
                android:gravity="center_vertical"
                android:textColor="@color/max_main_text_content"
                android:textSize="@dimen/dp_14"
                android:visibility="gone"
                />
            <!--警告码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:background="@color/max_main_power"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/m326警告码"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/max_main_text_title"
                    android:textSize="@dimen/size_content_sp_14"
                    />
                <TextView
                    android:id="@+id/tvWarm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/max_main_text_title"
                    android:textSize="@dimen/size_content_sp_14"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvWarnContent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@color/white1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/max_main_text_content"
                android:textSize="@dimen/size_content_sp_14"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
