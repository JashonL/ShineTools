<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTileIV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="I-V"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/size_content_sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/m477曲线"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/size_content_sp_12" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

     <!--   <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />-->

        <RadioButton
            android:id="@+id/rBtn1"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/oss_selector_bg_device"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text="I-V"
            android:textColor="@color/oss_selector_textcolor_device"
            android:textSize="@dimen/size_content_note" />

        <RadioButton
            android:id="@+id/rBtn2"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/oss_selector_bg_device"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text="P-V"
            android:textColor="@color/oss_selector_textcolor_device"
            android:textSize="@dimen/size_content_note" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvYUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/content_bg_white"
        android:textSize="@dimen/size_content_sp_12" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChartIV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180" />

    <TextView
        android:id="@+id/tvXUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/content_bg_white"
        android:textSize="@dimen/size_content_sp_12" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewIV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/gray_eeeeeee" />
</LinearLayout>