<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvUnit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:minWidth="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:textSize="@dimen/size_title_sp_12"
        android:textColor="@color/title_bg_white"
        />
    <Button
        android:id="@+id/btnValue"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:minWidth="@dimen/dp_125"
        app:layout_constraintRight_toLeftOf="@+id/tvUnit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/PutinActivity_search"
        android:gravity="center"
        android:textSize="@dimen/size_content_sp_14"
        android:textColor="@color/max_main_text_content"
        android:background="@drawable/bg_gray_stroke"
        />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnValue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:textSize="@dimen/size_content_sp_12"
        android:textColor="@color/title_bg_white"
        android:layout_marginRight="@dimen/dp_5"
        />
</androidx.constraintlayout.widget.ConstraintLayout>