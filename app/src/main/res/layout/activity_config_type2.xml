<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <include layout="@layout/toobar_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/tvTitle1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_margin="@dimen/dp_15"
        android:gravity="center_vertical"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/max_main_text_title"
        />
    <EditText
        android:id="@+id/etContent1"
        android:layout_width="@dimen/dp_220"
        android:layout_height="@dimen/dp_35"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="@dimen/size_content_sp_14"
        android:textColor="@color/max_main_text_content"
        android:background="@drawable/bg_gray_stroke"
        />
    <TextView
        android:id="@+id/tvContent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:textSize="@dimen/size_content_sp_14"
        android:textColor="@color/max_main_text_content"
        />

    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_margin="@dimen/dp_15"
        android:gravity="center_vertical"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/max_main_text_title"
        />
    <EditText
        android:id="@+id/etContent2"
        android:layout_width="@dimen/dp_220"
        android:layout_height="@dimen/dp_35"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="@dimen/size_content_sp_14"
        android:textColor="@color/max_main_text_content"
        android:background="@drawable/bg_gray_stroke"
        />
    <TextView
        android:id="@+id/tvContent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:textSize="@dimen/size_content_sp_14"
        android:textColor="@color/max_main_text_content"
        />
    <Button
        android:id="@+id/btnSetting"
        android:layout_width="@dimen/dp_230"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_selector"
        android:text="@string/android_key649"
        android:textColor="#ffffff"
        android:textSize="@dimen/size_content_sp_16" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
