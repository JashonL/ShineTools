<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/header_view_title_v3" android:id="@+id/headerView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_20"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_5"
            >
            <TextView
                android:layout_width="@dimen/dp_140"
                android:layout_height="match_parent"
                android:text="Command type:"
                android:gravity="center_vertical|right"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_content_sp_14"
                />
            <EditText
                android:id="@+id/etCommand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:inputType="number"
                android:gravity="center"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_content_sp_14"
                android:background="@drawable/edittext_bg_white_stroke"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="@dimen/dp_140"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="Register address:"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_content_sp_14"
                />

            <EditText
                android:id="@+id/etRegisterAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:inputType="number"
                android:background="@drawable/edittext_bg_white_stroke"
                android:gravity="center"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_content_sp_14"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_5"
            >

            <TextView
                android:id="@+id/textView24"
                android:layout_width="@dimen/dp_140"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="Length/Data:"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_content_sp_14"/>

            <EditText
                android:id="@+id/etLengthData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:inputType="number"
                android:background="@drawable/edittext_bg_white_stroke"
                android:gravity="center"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_content_sp_14"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_42"
            android:background="@drawable/btn_selector"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/m460开始"
            android:textColor="@color/white1"
            android:textSize="@dimen/size_content_sp_14"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/m365发送数据"
                android:gravity="center"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_content_sp_14"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/m366收到数据"
                android:gravity="center"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_content_sp_14"
                />
            <TextView
                android:id="@+id/tvClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="@string/MessagesActivity_delete"
                android:gravity="center_vertical|right"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_content_sp_14"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_content_sp_14"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReceiver"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                >
                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fillViewport="true"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/content_bg_white"
                            android:textSize="@dimen/size_content_sp_12"
                            android:textIsSelectable="true"/>
                    </RelativeLayout>
                </ScrollView>

            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnStop"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_42"
            android:background="@drawable/btn_selector"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Stop"
            android:textColor="@color/white1"
            android:textSize="@dimen/size_content_sp_14"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>
