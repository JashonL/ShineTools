<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_padding_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_12"
        android:background="@color/iphone_background"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_select_other"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white_background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="@string/其他网络"
        android:textColor="@color/title_bg_white"
        android:textSize="@dimen/size_title_sp_14"
        app:layout_constraintBottom_toTopOf="@+id/v_padding_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_padding_top" />

    <View
        android:id="@+id/v_padding_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/iphone_background"
        app:layout_constraintTop_toBottomOf="@+id/tv_select_other" />

</androidx.constraintlayout.widget.ConstraintLayout>