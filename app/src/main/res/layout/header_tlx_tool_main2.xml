<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >
    <!--发电量-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvEnergy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:cardElevation="0dp"
        android:background="@drawable/shape_white_corner_bg"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           >
         <ImageView
             android:layout_width="@dimen/dp_50"
             android:layout_height="@dimen/dp_25"
             android:src="@drawable/max_ele"
             android:layout_gravity="center_vertical"
             />
           <TextView
               android:id="@+id/tvEnergyStr"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:text="@string/photovoltaic_generatingcapacity"
               android:gravity="center_vertical"
               android:textColor="@color/max_main_energy"
               android:textSize="@dimen/size_content_sp_14"
               />
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="vertical"
               >
               <View
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>
               <TextView
                   android:id="@+id/tvTodayEH1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:gravity="center_vertical"
                   android:textColor="@color/max_main_energy"
                   android:textSize="@dimen/size_content_sp_14"
                   android:maxLines="1"
                   android:ellipsize="end"
                   />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/m182今日收益"
                   android:gravity="center_vertical"
                   android:textColor="@color/max_main_gray"
                   android:textSize="@dimen/size_content_sp_14"
                   android:maxLines="1"
                   android:ellipsize="end"
                   />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="vertical"
               android:layout_marginLeft="5dp"
               >
               <View
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>
               <TextView
                   android:id="@+id/tvTotalEH1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:gravity="center_vertical"
                   android:textColor="@color/max_main_energy"
                   android:textSize="@dimen/size_content_sp_14"
                   android:maxLines="1"
                   android:ellipsize="end"
                   />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/m183累计收益"
                   android:gravity="center_vertical"
                   android:textColor="@color/max_main_gray"
                   android:textSize="@dimen/size_content_sp_14"
                   android:maxLines="1"
                   android:ellipsize="end"
                   />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>
           </LinearLayout>
           <ImageView
               android:layout_width="@dimen/dp_5"
               android:layout_height="match_parent"
               android:src="@drawable/max_right"
               android:layout_marginRight="@dimen/dp_8"
               />
       </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!--输出功率-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvPower"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_8"
        app:cardElevation="0dp"
        android:background="@drawable/shape_white_corner_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_25"
                android:src="@drawable/max_power"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tvPowerStr"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/fragment1_power"
                android:gravity="center_vertical"
                android:textColor="@color/max_main_out_power"
                android:textSize="@dimen/size_content_sp_14"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvTodayPH1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_vertical"
                    android:textColor="@color/max_main_out_power"
                    android:textSize="@dimen/size_content_sp_14"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/当前功率"
                    android:gravity="center_vertical"
                    android:textColor="@color/max_main_gray"
                    android:textSize="@dimen/size_content_sp_14"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvTotalPH1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_vertical"
                    android:textColor="@color/max_main_out_power"
                    android:textSize="@dimen/size_content_sp_14"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/m189额定功率"
                    android:gravity="center_vertical"
                    android:textColor="@color/max_main_gray"
                    android:textSize="@dimen/size_content_sp_14"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/dp_5"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_8"
                />
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/iphone_background"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
              <ImageView
                  android:layout_width="@dimen/dp_15"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="@dimen/dp_15"
                  android:src="@drawable/ganjiedian"
                  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/m防逆流功率"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/size_content_sp_12"
                    android:textColor="@color/content_bg_white"
                    android:layout_marginLeft="@dimen/dp_5"
                    />
                <TextView
                    android:id="@+id/tvFluxPower"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/size_content_sp_12"
                    android:textColor="#aa9562"
                    android:layout_marginLeft="@dimen/dp_5"
                    />
                <LinearLayout
                    android:id="@+id/llDryStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_18"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:background="@drawable/shape_gray_corner_360bg"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/m干接点"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/size_content_sp_12"
                        android:textColor="@color/white1"
                        android:layout_marginLeft="@dimen/dp_2"
                        />
                    <ImageView
                        android:id="@+id/ivDryStatus"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="match_parent"
                        android:src="@drawable/ganjiedian_off"
                        android:layout_marginLeft="@dimen/dp_5"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!--故障告警-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvWarning"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_8"
        app:cardElevation="0dp"
        android:background="@drawable/shape_white_corner_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center_vertical"
                android:src="@drawable/max_worning"/>

            <TextView
                android:id="@+id/tvWarningStr"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/all_Fault"
                android:gravity="center_vertical"
                android:textColor="@color/max_main_err"
                android:textSize="@dimen/size_content_sp_14"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvErrH1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_vertical"
                    android:textColor="@color/max_main_err"
                    android:textSize="@dimen/size_content_sp_14"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/all_Fault"
                    android:gravity="center_vertical"
                    android:textColor="@color/max_main_gray"
                    android:textSize="@dimen/size_content_sp_14"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvWarnH1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_vertical"
                    android:textColor="@color/max_main_err"
                    android:textSize="@dimen/size_content_sp_14"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/m190警告"
                    android:gravity="center_vertical"
                    android:textColor="@color/max_main_gray"
                    android:textSize="@dimen/size_content_sp_14"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
<!--            <ImageView-->
<!--                android:layout_width="@dimen/dp_5"-->
<!--                android:layout_height="match_parent"-->
<!--                android:src="@drawable/max_right"-->
<!--                android:layout_marginRight="@dimen/dp_8"-->
<!--                />-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!--设备控制-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_13"
            android:layout_gravity="center_vertical"
            android:background="@color/max_main_power"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/m281设备控制"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/max_main_text_title"
            android:textSize="@dimen/dp_14"
            />
        <TextView
            android:id="@+id/tvResetPwd"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:text="@string/m重置密码"
            android:gravity="center_vertical|right"
            android:textColor="@color/max_main_power"
            android:textSize="@dimen/dp_14"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:background="@drawable/shape_white_corner_bg"
        >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        />
    </androidx.cardview.widget.CardView>
